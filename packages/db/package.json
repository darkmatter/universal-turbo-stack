{
  "name": "@acme/db",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "default": "./src/client.ts"
    },
    "./schema": {
      "types": "./dist/schema.d.ts",
      "default": "./src/schema.ts"
    },
    "./migrate": {
      "types": "./dist/migrate.d.ts",
      "default": "./src/migrate.ts"
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "tsc",
    "format": "biome format . --files-ignore-unknown=true",
    "format:fix": "biome format . --files-ignore-unknown=true --write",
    "lint": "biome lint . --files-ignore-unknown=true",
    "lint:fix": "biome lint . --files-ignore-unknown=true --write --unsafe",
    "push": "pnpm with-env drizzle-kit push",
    "studio": "pnpm with-env drizzle-kit studio",
    "genmigration": "pnpm with-env drizzle-kit generate",
    "migrate": "pnpm with-env drizzle-kit migrate",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "echo": "echo $POSTGRES_URL"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.1",
    "@vercel/postgres": "^0.10.0",
    "drizzle-orm": "^0.44.7",
    "drizzle-zod": "^0.8.3",
    "pg": "^8.16.3",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@acme/tsconfig": "workspace:*",
    "drizzle-kit": "^0.31.5",
    "typescript": "catalog:"
  }
}
